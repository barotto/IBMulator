table {
	display: block;
}
table tr {
	display: block;
	margin-top: 1px;
}
tr th {
	display: inline-block;
	padding: 4px;
	text-align: center;
	margin: 1px;
	background-color: #FF5555d0;
}
tr th.small {
	font-size: 10px;
}
tr th.normal {
	font-size: 11px;
}
tr th.large {
	font-size: 12px;
}
tr td {
	padding: 4px;
	margin: 1px;
	display: inline-block;
	background-color: #38A838d0;
}
tr td.small {
	font-size: 10px;
}
tr td.large {
	font-size: 12px;
}
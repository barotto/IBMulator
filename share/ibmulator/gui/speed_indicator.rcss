#speed
{
	position: absolute;
	text-align: center;
	font-size: 12dp;
	top: 16dp;
	right: 16dp;
	padding: 0.3em;
	background-color: #00aa0088;
	visibility: visible;
	color: #ffffff;
}

#speed.paused
{
	background-color: #aaaa0088;
}

#speed.slow
{
	background-color: #aaaa0088;
}

#speed.warning
{
	width: 2em;
	height: 3em;
	padding-top: 0;
	background-color: #ff000088;
}

#speed.warning .warning_icon
{
	width: 2em;
	height: 2em;
	decorator: image(icons/warning.png none fill left top);
}